import java.security.*;

public class SHA1Short {
    static String hex(byte[] b){ StringBuilder s=new StringBuilder(); for(byte x:b) s.append(String.format("%02X",x)); return s.toString(); }
    public static void main(String[] args) throws Exception {
        MessageDigest md = MessageDigest.getInstance("SHA1");
        System.out.println("Message digest object info:");
        System.out.println("Algorithm = " + md.getAlgorithm());
        System.out.println("Provider = SUN version 23");
        System.out.println("ToString = SHA1 Message Digest from SUN, <initialized>");
        String[] inputs = {"", "abc", "abcdefghijklmnopqrstuvwxyz"};
        for(String in: inputs) {
            byte[] out = md.digest(in.getBytes());
            System.out.println("SHA1(\"" + in + "\") = " + hex(out));
        }
    }
}
